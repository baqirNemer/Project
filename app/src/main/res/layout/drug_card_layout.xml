<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:background="@drawable/drug_card"
        android:gravity="center">

        <TextView
            android:id="@+id/ProductNdc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="NDC"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/GenericName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductNdc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Generic"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/LabelerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GenericName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Labeler"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/BrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LabelerName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="Brand"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DosageForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/BrandName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Dosage"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/DosageForm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>