<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingTop="30dp"
        android:paddingEnd="16dp">
        <TextView
            android:id="@+id/firstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="14sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/firstNameLabel"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:hint="Enter your first name"/>

        <TextView
            android:id="@+id/lastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstNameEditText"
            android:text="Last Name"
            android:textSize="14sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/lastNameLabel"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:hint="Enter your last name"/>

        <TextView
            android:id="@+id/ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastNameEditText"
            android:text="Age"
            android:textSize="14sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/ageLabel"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:hint="Enter your age"/>

        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="14sp"
            android:layout_below="@id/ageEditText"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/phoneLabel"
            android:layout_marginTop="8dp"
            android:inputType="phone"
            android:hint="Enter your phone number"/>

        <TextView
            android:id="@+id/bloodTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Type"
            android:textSize="14sp"
            android:layout_below="@id/phoneEditText"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/bloodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/bloodTypeLabel"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/sexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:textSize="14sp"
            android:layout_below="@id/bloodTypeSpinner"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/sexSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/sexLabel"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sexSpinner"
            android:background="@drawable/rounded_button_cyan"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:padding="4dp"
            android:text="Save"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>